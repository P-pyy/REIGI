<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="theme-color" content="#1976d2">
  <meta name="mobile-web-app-capable" content="yes">

  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">

  <meta name="apple-touch-fullscreen" content="yes">
  <meta name="fullscreen" content="yes">


  <%- include('partials/kiosk/head') %>

  <title><%= pageTitle || 'Kiosk' %></title>

  <link rel="manifest" href="/kiosk/manifest.json">
  <link rel="icon" type="image/png" href="/kiosk/icons/icon-192x192.png">

  <script>
    if ("serviceWorker" in navigator) {
      window.addEventListener("load", () => {
        navigator.serviceWorker.register("/kiosk/service-worker.js")
          .then(() => console.log("✅ Kiosk Service Worker registered"))
          .catch(err => console.error("❌ SW registration failed:", err));
      });
    }
  </script>

  <script>
    window.__ENV__ = {
      SUPABASE_URL: '<%= process.env.SUPABASE_URL %>',
      SUPABASE_ANON_KEY: '<%= process.env.SUPABASE_ANON_KEY %>'
    };
  </script>

  <link rel="stylesheet" href="/kiosk/css/style.css">
</head>

<body class="kiosk-body">
  <main class="preload">
    <%- content %>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.min.js"></script>
  <script src="https://unpkg.com/@phosphor-icons/web"></script>
  <script type="module" src="/kiosk/js/main.js"></script>
</body>
</html>
