<div class="container">
  <div class="search-container">
    <h1 class="search-title">Search</h1>
    <div class="input-voice-container">
      <input type="text" class="form-control" placeholder="What's your Question?">
      <button class="voice-btn"><i class="ph ph-microphone"></i>
        <span class="voice-btn-text">Voice Search</span>
      </button>
    </div>
    <div class="faq-option-container"></div>
  </div>
</div>

<div id="overlay-backdrop"></div>

  <div class="container container-overlay">
    <div class="navigation-head-container">
      <a href="" id="back-btn-1"><i class="ph ph-arrow-left"></i></a>
      <button class="speak-btn"><i class="ph ph-user-sound"></i><span class="speak-btn-text">Read Aloud</span></button>
    </div>

    <div class="container-content">
        <div class="title-container">
          <h4 class="title-preview">Process</h4>
          <p class="faq-name">Certificate of Registration</p>
        </div>
      <div class="process-container">
        <div class="faq-preview p-3">
          <p class="directions">Requirements</p>
          <ol class="mt-2 mb-0">
            <li class="faq-item"></li>
          </ol>
        </div>
        <div class="faq-preview-card p-4 rounded ">
          <p class="mb-1 directions">Check the boxes that youâ€™ve completed to proceed:</p>
          <p class="text-center mb-3 text-muted small"></p>

          <!-- Scrollable Paragraph -->
           <div class="preview-text"><!-- ðŸ‘ˆ now an empty container -->
            <!-- Steps will be injected here dynamically -->
          </div>
        </div>
      </div>
      <div class="img-section-container">
        <img class="preview-image mt-2" style="max-width:100%; display:none;" alt="FAQ Image Preview">
      </div>
        <div class="submit-container">
          <button class="speak-btn" id="proceed-btn" disabled><span class="speak-btn-text">Proceed</span></button>
        </div>
    </div>
  </div>


  <div class="container container-overlay-form">
    <div class="navigation-head-container">
      <a href="" id="back-btn-2"><i class="ph ph-arrow-left"></i></a>
    </div>

    <div class="container-content-2">
        <div class="title-container">
          <h4 class="title-preview">Complete your Information</h4>
          <p class="faq-name">Fill with your complete name</p>
        </div>
      <div class="process-container">
        <div class="faq-preview-2 p-3">
          <input type="text" class="form-control" id="first-name-input" placeholder="First Name">
          <input type="text" class="form-control" id="last-name-input" placeholder="Last Name">
        </div>
      </div>
        <div class="submit-container">
          <button class="speak-btn" id="finish-btn" disabled><span class="finish-btn-text">Finish</span></button>
        </div>
    </div>
  </div>  

  <div class="container container-overlay-number">

    <div class="container-content-num">
      <div class="title-container">
        <h4 class="title-preview-num">Your Queue number is:</h4>
      </div>
      <div class="process-container">
        <div class="faq-preview-2 p-3">
          <div class="number-container">
            <h3 class="number-preview"></h4>
          </div>
          <div class="number-container">
            <p class="message-name">Get your stub below and wait for your turn. Thank you! </p>
          </div>
        </div>
      </div>
        <div class="submit-container">
          <button class="speak-btn" id="finish-btn-num"><span class="finish-btn-text">Finish</span></button>
        </div>
    </div>
  </div>  

  <!-- Voice Search Overlay -->
  <div class="voice-search-overlay">
    <div class="voice-search-content">
      <a href="#" class="voice-back-btn"><i class="ph ph-arrow-left"></i></a>
      <h2 class="voice-title">Listening...</h2>
      <p class="voice-subtitle">Tung tung tung tung tung sahur COR</p>
      <button class="voice-cancel-btn">Cancel</button>
    </div>
  </div>
  <div id="voice-overlay-backdrop"></div>


</div>


<script type="module" src="/public/kiosk/js/main.js"></script>

