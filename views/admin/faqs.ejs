<div class="container-fluid d-flex p-0 min-vh-100">

  <!-- Sidebar Include -->
  <%- include('../partials/admin/sidebar') %>

  <!-- css link -->
  <link rel="stylesheet" href="/css/faqs.css">

  <!-- HEADER -->
  <header class="main-header d-flex justify-content-between align-items-center px-4">
    <h1 class="mb-0">Frequently Asked Questions</h1>
  </header>

  <!-- Main Content -->
  <main class="main-content admin-faq flex-grow-1">
    <div class="faq-wrapper container">

      <!-- FAQ GRID -->
      <div class="faq-grid" id="faq-grid">

        <!-- FAQ Card 1 -->
        <div class="faq-cards">
          <div>
            <div class="faq-header">
              <div class="faq-title">Enrollment Process</div>
              <i class="ph-bold ph-checks phosphor-icon"></i>
            </div>
          </div>
          <div class="card-footer">
            <button class="card-button" data-target="enrollment-section">See List</button>
          </div>
        </div>

        <!-- FAQ Card 2 -->
        <div class="faq-cards">
          <div>
            <div class="faq-header">
              <div class="faq-title">Document Request</div>
              <i class="ph-bold ph-files phosphor-icon"></i>
            </div>
          </div>
          <div class="card-footer">
            <button class="card-button" data-target="document-request-section">See List</button>
          </div>
        </div>

        <!-- FAQ Card 3 -->
        <div class="faq-cards">
          <div>
            <div class="faq-header">
              <div class="faq-title">Graduation & Clearance</div>
              <i class="ph-bold ph-list-checks phosphor-icon"></i>
            </div>
          </div>
          <div class="card-footer">
            <button class="card-button" data-target="graduation-clearance-section">See List</button>
          </div>
        </div>

      </div>
      
      <!-- ✅ Enrollment Section -->


      <div class="d-none" id="enrollment-section">
        <div class="back-container d-none">
            <a href="" class="back-btn"><i class="ph ph-arrow-left"></i></a>
        </div>
        <div class="container-group">
          <div class="card shadow-sm admin-esfaq-card fade-in">
            <div class="card-body">
              <div class="table-wrapper">
                <table class="table align-middle faq-table">
                  <thead class="table-title">
                    <tr>
                      <th><span class="th-text">ID</span></th>
                      <th><span class="th-text">Question Title</span></th>
                      <th><span class="th-text">FAQ Post Title</span></th>
                      <th><span class="th-text">Requirements</span></th>
                      <th><span class="th-text">Steps</span></th>
                      <th><span class="th-text">Image</span></th>
                      <th><span class="th-text">Date & Time</span></th>
                      <th><span class="th-text">Action</span></th>
                    </tr>
                  </thead>
                  <tbody>
                    <!-- rows dynamically injected -->
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <div class="text-center">
            <button class="btn add-question-btn">
              <i class="ph-bold ph-plus"></i>
              <span class="btn-text">Add New Question</span>
            </button>
          </div>
        </div>
      </div>

      <!-- ✅ Document Request Section -->
      <div class="d-none" id="document-request-section">
        <div class="back-container d-none">
            <a href="" class="back-btn"><i class="ph ph-arrow-left"></i></a>
        </div>
        <div class="container-group">
          <div class="card shadow-sm admin-esfaq-card fade-in">
            <div class="card-body">
              <div class="table-wrapper">
                <table class="table align-middle faq-table">
                  <thead class="table-title">
                    <tr>
                      <th><span class="th-text">ID</span></th>
                      <th><span class="th-text">Question Title</span></th>
                      <th><span class="th-text">FAQ Post Title</span></th>
                      <th><span class="th-text">Requirements</span></th>
                      <th><span class="th-text">Steps</span></th>
                      <th><span class="th-text">Image</span></th>
                      <th><span class="th-text">Date & Time</span></th>
                      <th><span class="th-text">Action</span></th>
                    </tr>
                  </thead>
                  <tbody>
                    <!-- rows dynamically injected -->
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <div class="text-center">
            <button class="btn add-question-btn">
              <i class="ph-bold ph-plus"></i>
              <span class="btn-text">Add New Question</span>
            </button>
          </div>
        </div>
      </div>

      <!-- ✅ Graduation & Clearance Section -->

      <div class="d-none" id="graduation-clearance-section">
        <div class="back-container d-none">
            <a href="" class="back-btn"><i class="ph ph-arrow-left"></i></a>
        </div>
        <div class="container-group">
          <div class="card shadow-sm admin-esfaq-card fade-in">
            <div class="card-body">
              <div class="table-wrapper">
                <table class="table align-middle faq-table">
                  <thead class="table-title">
                    <tr>
                      <th><span class="th-text">ID</span></th>
                      <th><span class="th-text">Question Title</span></th>
                      <th><span class="th-text">FAQ Post Title</span></th>
                      <th><span class="th-text">Requirements</span></th>
                      <th><span class="th-text">Steps</span></th>
                      <th><span class="th-text">Image</span></th>
                      <th><span class="th-text">Date & Time</span></th>
                      <th><span class="th-text">Action</span></th>
                    </tr>
                  </thead>
                  <tbody>
                    <!-- rows dynamically injected -->
                  </tbody>
                </table>
              </div>
            </div>
          </div>
          <div class="text-center">
            <button class="btn add-question-btn">
              <i class="ph-bold ph-plus"></i>
              <span class="btn-text">Add New Question</span>
            </button>
          </div>
        </div>
      </div>

     <!-- FAQ Editor Section (hidden by default) -->
    <div id="faq-editor-section" class="d-none my-5">

      <div class="back-container d-none">
        <a href="" class="back-btn"><i class="ph ph-arrow-left"></i></a>
      </div>
     <div class="row g-4">
       <!-- FAQ Post Form -->
       <div class="col-md-6">
         <div class="faq-form p-3 shadow-sm rounded bg-white h-100 font-weight-600">
           <h5 class="mb-3">FAQ Post</h5>

           <!-- Question Title -->
           <input type="text" class="form-control mb-3" placeholder="Question Title">

           <!-- FAQ Post Title -->
           <input type="text" class="form-control mb-3" placeholder="FAQ Post Title">

           <!-- Date & Time -->
           <input type="date" class="form-control mb-3">

           <div class="requirements">
             <span class="section-text">Requirements</span>
             <div class="fill-up">
             <!-- FAQ Post Title -->
               <input id="requirementInput" type="text" class="form-control" placeholder="Insert a Requirement here">
               <i class="ph-plus ph-plush"></i>
             </div>
           </div>
         
           <div class="requirements" id="requirements-container">
             <div class="fill">
               <div class="fill-upper">
               <!-- FAQ Post Title -->
                 <span>Added Requirement</span>
               </div>
               <i class="ph-minus ph-minos"></i>
             </div>
           </div>

         
           <div class="requirements">
             <span class="section-text">Step-by-step Process</span>
             <div class="fill-up">
             <!-- FAQ Post Title -->
               <input id="stepProcessInput" type="text" class="form-control" placeholder="Insert a Step process here">
               <i class="ph-plus ph-plush"></i>
             </div>
           </div>
         
           <div class="requirements" id="steps-container">
             <div class="fill">
               <div class="fill-upper">
               <!-- FAQ Post Title -->
                 <span>Added Process</span>
               </div>
                 <i class="ph-minus ph-minos"></i>
             </div>
           </div>
         
           <!-- Image Upload -->
           <div class="mb-4 img-upload-container">
             <div id="uploadArea"
               class="image-upload-area text-center d-flex flex-column align-items-center justify-content-center"
               onclick="document.getElementById('imageInput').click()">

               <button type="button" class="btn btn-darkblue shadow-sm mb-2 d-flex align-items-center gap-2 admin-edit-btn">
                 <i class="ph-bold ph-image"></i>
                 <span class="btn1-text">Choose Image</span>
               </button>
             
               <p class="mb-1 drag-drop-text">Drag & Drop the image here</p>
               <p class="text-muted small image-format">PNG / JPG / Webp</p>
             </div>
           
             <!-- Hidden File Input -->
            <input type="file" id="imageInput" class="d-none" accept="image/*">
           </div>
         
           <!-- Submit Button -->
           <button class="btn btn-primary w-100">Submit</button>
         </div>
       </div>
     
       <!-- Post Preview -->
     

       <div class="col-md-6 preview-card">
         <!-- Title Added -->
         <h4 class="title-preview">Preview</h4>

         <div class="faq-preview-question p-3">
           <p class="faq-category-title">FREQUENTLY ASKED QUESTIONS:</p>
           <ol class="mt-2 mb-0">
             <li class="faq-item">
             </li>
           </ol>
         </div>
       
         <div class="faq-preview p-3">
           <p class="directions">Requirements</p>
           <ol class="mt-2 mb-0 requirementsPreview" style="padding-left:20px;">
             <li class="faq-item">
             </li>
           </ol>
         </div>
       
         <div class="faq-preview-card p-4 rounded ">
           <p class="mb-1 directions">Check the boxes that you’ve completed to proceed:</p>

           <div class="steps-preview-container"></div>
           
           <!-- Scrollable Paragraph -->
           <div class="preview-text checkbox-wrapper-4">
               <input class="inp-cbx" id="step" type="checkbox"/>
               <label class="cbx" for="step">
                 <span>
                   <svg width="12px" height="10px">
                     <use xlink:href="#check-4"></use>
                   </svg>
                 </span>
               </label>
                 <svg class="inline-svg">
                   <symbol id="check-4" viewbox="0 0 12 10">
                     <polyline points="1.5 6 4.5 9 10.5 1"></polyline>
                   </symbol>
                 </svg>
               <p class="checkbox-content">
                 Step process directions
               </p>
           </div>
         
           <img class="preview-image mt-2" style="max-width:100%; display:none;" alt="FAQ Image Preview">
         </div>
       </div>
     </div>
    </div>
   
    </div>
  </main>
</div>

<script type="module" src="/js/faqs.js"></script>

