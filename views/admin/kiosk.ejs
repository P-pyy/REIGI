<div class="container-fluid d-flex p-0 min-vh-100">

  <!-- Sidebar Include -->
  <%- include('../partials/admin/sidebar') %>

  <!-- css link -->
  <link rel="stylesheet" href="/css/kiosk.css">

  <!-- HEADER -->
  <header class="main-header d-flex justify-content-between align-items-center px-4">
    <h1 class="mb-0">Kiosk Settings</h1>
  </header>

  <!-- Main Content -->
  <main class="main-content admin-faq flex-grow-1">
    <div class="faq-wrapper container">

      <!-- FAQ GRID -->
      <div class="faq-grid" id="faq-grid">

        <!-- FAQ Card 1 -->
        <div class="faq-cards">
          <div>
            <div class="faq-header">
              <i class="ph-bold ph-clock phosphor-icon"></i>
              <div class="faq-title">Queue Management</div>
            </div>
          </div>
          <div class="card-footer">
            <button class="card-button" data-target="enrollment-section">Proceed</button>
          </div>
        </div>

        <!-- FAQ Card 2 -->
        <div class="faq-cards">
          <div>
            <div class="faq-header">
              <i class="ph-bold ph-question phosphor-icon"></i>
              <div class="faq-title">Kiosk FAQ’s</div>
            </div>
          </div>
          <div class="card-footer">
            <button class="card-button" data-target="document-request-section">Proceed</button>
          </div>
        </div>
      </div>

            <!-- Queue Management Section -->
      <div id="enrollment-section" class="d-none">
        <div class="card shadow-sm admin-esfaq-card fade-in">
          <div class="card-body">
            <div class="table-wrapper">
              <table class="table align-middle faq-table">
                <thead class="table-title">
                  <tr>
                    <th>ID</th>
                    <th>Question Title</th>
                    <th>FAQ Post Title</th>
                    <th>Question Details</th>
                    <th>Image</th>
                    <th>Date & Time</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <!-- rows dynamically injected -->
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <div class="text-center mt-3">
          <button class="btn add-question-btn">
            <i class="ph-bold ph-plus"></i>
            <span class="btn-text">Add New Question</span>
          </button>
        </div>
      </div>

      <!-- Kiosk FAQ’s Section -->
      <div id="document-request-section" class="admin-drfaq-card d-none">
        <div class="card shadow-sm fade-in">
          <div class="card-body">
            <div class="table-wrapper">
              <table class="table align-middle faq-table">
                <thead class="table-title">
                  <tr>
                    <th>ID</th>
                    <th>Question Title</th>
                    <th>Requirements</th>
                    <th>Step-by-step Process</th>
                    <th>Date</th>
                    <th></th>
                  </tr>
                </thead>
                <tbody>
                  <!-- rows dynamically injected -->
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <div class="text-center mt-3">
          <button class="btn add-question-btn">
            <i class="ph-bold ph-plus"></i>
            <span class="btn-text">Add a FAQ</span>
          </button>
        </div>
      </div>

           <!-- FAQ Editor Section (hidden by default) -->
<div id="faq-editor-section" class="d-none my-5">
  <div class="row g-4">
    <!-- FAQ Post Form -->
    <div class="col-md-6">
      <div class="faq-form p-3 shadow-sm rounded bg-white h-100 font-weight-600">
        <h5 class="mb-3">FAQ Post</h5>

        <!-- Question Title -->
        <input type="text" class="form-control mb-3" placeholder="Question Title">

        <!-- FAQ Post Title -->
        <input type="text" class="form-control mb-3" placeholder="FAQ Post Title">

        <!-- Date & Time -->
        <input type="date" class="form-control mb-3">

        <!-- Details -->
        <textarea class="form-control mb-3" rows="4" placeholder="Put the details here..."></textarea>

        <!-- Image Upload -->
        <div class="mb-4">
          <div id="uploadArea"
            class="image-upload-area text-center d-flex flex-column align-items-center justify-content-center"
            onclick="document.getElementById('imageInput').click()">

            <button type="button" class="btn btn-darkblue shadow-sm mb-2 d-flex align-items-center gap-2 admin-edit-btn">
              <i class="ph-bold ph-image"></i>
              <span class="btn1-text">Choose Image</span>
            </button>

            <p class="mb-1 drag-drop-text">Drag & Drop the image here</p>
            <p class="text-muted small image-format">PNG / JPG / Webp</p>
          </div>

          <!-- Hidden File Input -->
         <input type="file" id="imageInput" class="d-none" accept="image/*">
        </div>

        <!-- Submit Button -->
        <button class="btn btn-primary w-100">Submit</button>
      </div>
    </div>

    <!-- Post Preview -->
    <div class="col-md-6">
      <!-- Title Added -->
      <h4 class="fw-bold mb-3 text-uppercase text-primary">POST PREVIEW</h4>

      <div class="faq-preview p-3 shadow-sm mb-3 rounded bg-white">
        <strong>FREQUENTLY ASKED QUESTIONS:</strong>
        <ol class="mt-2 mb-0">
          <li class="faq-item">
            1. How to get my Transcript of Records (TOR)?
            <i class="ph-bold ph-arrow-up-right faq-icon"></i>
          </li>
        </ol>
      </div>

      <div class="faq-preview-card p-4 shadow-sm rounded bg-white">
        <h5 class="fw-bold preview-title">Shifting / Program Transfer</h5>
        <p class="text-center mb-1 text-muted small">Updated: MM/DD/YY</p>
        <p class="text-center mb-3 text-muted small">By: URSAC Registrar</p>

        <!-- Scrollable Paragraph -->
        <div class="preview-text">
          <p>
            "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua..."
          </p>
          <p>
            Section 1.10.32 of "de Finibus Bonorum et Malorum", written by Cicero in 45 BC ...
          </p>
        </div>

        <img class="preview-image mt-2" style="max-width:100%; display:none;" alt="FAQ Image Preview">
      </div>
    </div>
  </div>
</div>

    </div>
  </main>
</div>

<script type="module" src="/js/kiosk.js"></script>

