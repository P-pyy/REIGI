<div class="container-fluid d-flex p-0 min-vh-100">

  <!-- Sidebar Include -->
  <%- include('../partials/admin/sidebar') %>

  <!-- css link -->
  <link rel="stylesheet" href="/css/admin_announcement.css">

    <!-- HEADER -->
    <header class="main-header d-flex justify-content-between align-items-center">
      <h1 id="page-title" class="mb-0">Announcement</h1>
    </header>
    
    <!-- Main Content -->
    <main class="main-content admin-announcement-main flex-grow-1">

      <!-- Loading Overlay -->
      <div id="loading-overlay">
        <div class="spinner-border text-primary" role="status">
          <span class="visually-hidden">Loading...</span>
        </div>
      </div>

      <div class="announcement-box my-4">
        <div class="back-container">
          <a href="/admin/dashboard" class="back-btn"><i class="ph ph-arrow-left"></i></a>
        </div>
        <div class="container-group">
        <!-- Card Section -->
          <div class="card shadow-sm admin-announcement-card fade-in">
            <div class="card-body">

              <!-- Table -->
              <div class="table-wrapper">
                <table class="table align-middle announcement-table">
                  <thead class="table-title">
                    <tr>      
                      <th class="testing"></th>
                      <th><span class="th-text">ID</span></th>
                      <th><span class="th-text">Announcement Title</span></th>
                      <th><span class="th-text">Announcement Details</span></th>
                      <th><span class="th-text">Image</span></th>
                      <th><span class="th-text">Scheduled Date</span></th>
                      <th><span class="th-text">Time</span></th>
                      <th><span class="th-text">Action</span></th>
                    </tr>
                  </thead>
                  <tbody>
                    <!-- rows dynamically injected -->
                  </tbody>
                </table>
              </div>
              <!-- End of table -->

            </div>
          </div>
                  <!-- Add Button -->
          <div class="text-center mt-3">
            <button id="add-announcement-btn" class="btn add-announcement-btn">
              <i class="ph-bold ph-plus"></i>
              <span class="btn-text">Add new Announcement</span>
            </button>
          </div>
        </div>



<div id="edit-form-container" style="display:none;"></div>


      </div>
    </main>
  </div>

  <script type="module" src="/js/admin_announcement.js"></script>


