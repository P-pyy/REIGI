<div class="container-fluid d-flex p-0 min-vh-100">

  <!-- Sidebar Include -->
  <%- include('../partials/admin/sidebar') %>

  <!-- css link -->
  <link rel="stylesheet" href="/css/admin_announcement.css">

    <!-- HEADER -->
    <header class="main-header d-flex justify-content-between align-items-center">
      <h1 id="page-title" class="mb-0">Announcement</h1>
    </header>
    
    <!-- Main Content -->
    <main class="main-content admin-announcement-main flex-grow-1">

      <!-- Loading Overlay -->
      <div id="loading-overlay">
        <div class="spinner-border text-primary" role="status">
          <span class="visually-hidden">Loading...</span>
        </div>
      </div>

      <div class="announcement-box my-4">

        <!-- Card Section -->
        <div class="card shadow-sm admin-announcement-card fade-in">
          <div class="card-body">

            <!-- Table -->
            <div class="table-wrapper">
              <table class="table table-hover align-middle announcement-table">
                <thead class="table-title">
                  <tr>
                    <th>ID</th>
                    <th>Announcement Title</th>
                    <th>Announcement Details</th>
                    <th>Image</th>
                    <th>Scheduled Date</th>
                    <th>Time</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <!-- rows dynamically injected -->
                </tbody>
              </table>
            </div>
            <!-- End of table -->

          </div>
        </div>

        <!-- Add Button -->
        <div class="text-center mt-3">
          <button id="add-announcement-btn" class="btn add-announcement-btn">
            <i class="ph-bold ph-plus"></i>
            <span class="btn-text">Add new Announcement</span>
          </button>
        </div>

<div id="edit-form-container" style="display:none;"></div>


      </div>
    </main>
  </div>

<!-- script -->
<script type="module" src="/js/admin_announcement.js"></script>


